            <ImageView android:id="@+id/win_sdk_offer_dialog_appicon" android:layout_width="40dp" android:layout_height="40dp"/>
            <TextView android:textSize="18sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/win_sdk_offer_dialog_appname" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/win_sdk_offer_dialog_get_container" android:background="@drawable/win_sdk_offer_dialog_btn" android:visibility="visible" android:layout_width="200dp" android:layout_height="38dp" android:layout_marginTop="8dp">
        <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="#742a00" android:gravity="center" android:id="@+id/win_sdk_offer_dialog_get" android:background="@drawable/win_sdk_offer_dialog_btn" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableLeft="@drawable/win_sdk_offer_dialog_coin" android:drawablePadding="4dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/win_sdk_offer_dialog_close" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="16dp" android:src="@drawable/win_sdk_app_wall_dialog_close" android:scaleType="fitXY"/>
</LinearLayout>

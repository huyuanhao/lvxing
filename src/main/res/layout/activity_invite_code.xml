        <TextView android:id="@+id/tv_title_right" style="@style/Toolbar.RightText.Grey"/>
    </ezy.ui.widget.CenteredTitleBar>
    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <androidx.core.widget.NestedScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="23dp">
                    <TextView android:textSize="40sp" android:id="@+id/tv_code" android:tag="binding_1" android:layout_centerInParent="true" android:fontFamily="@font/din_black" style="@style/tv_16_c33"/>

<?xml version="1.0" encoding="utf-8"?>
<com.qiyukf.nim.uikit.session.module.input.MessageRootLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:layerType="hardware">
    <LinearLayout android:orientation="vertical" android:id="@+id/messageActivityLayout" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/ysf_text_size_14" android:textColor="@color/ysf_tips_text_c08722" android:ellipsize="end" android:gravity="center" android:id="@+id/message_tips_label" android:background="@color/ysf_tips_background_fff9e2" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_message_fragment_ad" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <FrameLayout android:id="@+id/message_activity_list_view_container" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <com.qiyukf.nim.uikit.session.helper.MsgBgImageView android:id="@+id/message_activity_background" android:background="@color/ysf_window_background" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <com.qiyukf.nim.uikit.common.ui.listview.MessageListView android:id="@+id/messageListView" android:focusable="false" android:scrollbars="vertical" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:cacheColorHint="@android:color/transparent" android:divider="@null" style="@style/ysf_list_view"/>
            <ListView android:layout_gravity="bottom" android:id="@+id/ysf_quick_reply_list_view" android:visibility="gone" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@color/ysf_grey_d9d9d9"/>
            <RelativeLayout android:layout_gravity="center" android:id="@+id/ysf_audio_recording_panel" android:background="@drawable/ysf_recording_background" android:padding="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <FrameLayout android:id="@+id/ysf_audio_recording_animation_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
                    <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/ysf_audio_amplitude_panel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                        <ImageView android:id="@+id/ysf_recording_view_mic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ysf_recording_mic" android:contentDescription="@null"/>
                        <ImageView android:id="@+id/ysf_amplitude_indicator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:src="@drawable/ysf_amplitude_list" android:layout_toRightOf="@+id/ysf_recording_view_mic" android:layout_alignBottom="@+id/ysf_recording_view_mic" android:contentDescription="@null"/>
                    </RelativeLayout>
                    <TextView android:textSize="80dp" android:textColor="@android:color/white" android:layout_gravity="center_horizontal" android:id="@+id/ysf_recording_count_down_label" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-15dp" android:layout_marginBottom="-5dp" android:text="2"/>
                    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/ysf_audio_record_end_tip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:src="@drawable/ysf_audio_record_end"/>
                </FrameLayout>
                <ImageView android:id="@+id/ysf_recording_cancel_indicator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/ysf_recording_cancel" android:layout_centerHorizontal="true" android:contentDescription="@null"/>
                <TextView android:textSize="@dimen/ysf_text_size_13" android:textColor="@android:color/white" android:id="@+id/ysf_cancel_recording_text_view" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ysf_audio_record_cancel_tip" android:maxLines="1" android:layout_below="@+id/ysf_audio_recording_animation_view" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <ImageView android:layout_gravity="end" android:id="@+id/ysf_session_list_entrance" android:visibility="gone" android:layout_width="42dp" android:layout_height="42dp" android:layout_marginTop="20dp" android:src="@drawable/ysf_session_list_entrance_right" android:scaleType="centerInside" android:contentDescription="@null"/>
        </FrameLayout>
        <include layout="@layout/ysf_message_activity_bottom_layout"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/play_audio_mode_tips_bar" android:background="@color/ysf_play_audio_mode_background" android:padding="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/play_audio_mode_tips_indicator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/ysf_text_size_14" android:textColor="@android:color/white" android:gravity="center_vertical" android:id="@+id/play_audio_mode_tips_label" android:layout_width="match_parent" android:layout_height="40dp" android:drawablePadding="10dp" android:layout_toRightOf="@+id/play_audio_mode_tips_indicator"/>
    </RelativeLayout>
</com.qiyukf.nim.uikit.session.module.input.MessageRootLayout>

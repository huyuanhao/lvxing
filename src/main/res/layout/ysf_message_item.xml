<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/ysf_text_size_13" android:textColor="@color/ysf_notification_text" android:id="@+id/ysf_message_item_time" android:paddingLeft="7dp" android:paddingRight="7dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ysf_bubble_time_layout_margin_top" android:layout_marginBottom="@dimen/ysf_bubble_time_layout_margin_bottom" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="@dimen/ysf_text_size_12" android:textColor="@color/ysf_grey_999999" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/ysf_message_item_nickname" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_marginBottom="@dimen/ysf_bubble_name_layout_margin_bottom" android:maxWidth="160dp" android:singleLine="true" android:layout_below="@+id/ysf_message_item_time" android:layout_alignParentLeft="true"/>
    <com.qiyukf.nim.uikit.common.ui.imageview.HeadImageView android:id="@+id/ysf_message_item_portrait_left" android:visibility="gone" android:layout_width="@dimen/ysf_avatar_size" android:layout_height="@dimen/ysf_avatar_size" android:layout_marginRight="@dimen/ysf_bubble_head_margin_horizontal" android:layout_below="@+id/ysf_message_item_nickname" android:layout_alignParentLeft="true" app:ysf_siv_border_color="@android:color/white" app:ysf_siv_border_width="1dp"/>
    <com.qiyukf.nim.uikit.common.ui.imageview.HeadImageView android:id="@+id/ysf_message_item_portrait_right" android:visibility="gone" android:layout_width="@dimen/ysf_avatar_size" android:layout_height="@dimen/ysf_avatar_size" android:layout_marginLeft="@dimen/ysf_bubble_head_margin_horizontal" android:layout_below="@+id/ysf_message_item_time" android:layout_alignParentRight="true" app:ysf_siv_border_color="@android:color/white" app:ysf_siv_border_width="1dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/ysf_message_item_portrait_right" android:layout_toRightOf="@+id/ysf_message_item_portrait_left" android:layout_below="@+id/ysf_message_item_nickname">
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:id="@+id/ysf_message_item_body" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_message_item_read_status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="6dp"/>
                <ProgressBar android:layout_gravity="center" android:id="@+id/ysf_message_item_progress" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:indeterminateDrawable="@drawable/ysf_progress_bar_grey" style="@style/Widget.ProgressBar.Small"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/ysf_message_item_alert" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:src="@drawable/ysf_ic_failed" android:contentDescription="@null"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/ysf_message_item_trash_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:src="@drawable/ysf_ic_delete" android:contentDescription="@null"/>
                <com.qiyukf.nim.uikit.session.viewholder.MsgContainerLayout android:layout_gravity="center" android:id="@+id/ysf_message_item_content" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>
        <TextView android:textSize="@dimen/ysf_text_size_13" android:textColor="@color/ysf_red_f25058" android:layout_gravity="right" android:id="@+id/ysf_message_item_trash_tips" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:maxWidth="270dp"/>
    </LinearLayout>
</RelativeLayout>

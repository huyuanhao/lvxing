<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/textMessageLayout" android:background="@drawable/ysf_message_view_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="#d8d8d8" android:layout_width="match_parent" android:layout_height="@dimen/ysf_divider_height"/>
    <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:paddingTop="@dimen/ysf_bottom_component_margin_vertical" android:paddingBottom="@dimen/ysf_bottom_component_margin_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/switchLayout" android:layout_width="@dimen/ysf_message_input_height" android:layout_height="@dimen/ysf_message_input_height" android:layout_marginLeft="@dimen/ysf_bottom_component_margin_horizontal">
            <ImageView android:id="@+id/buttonAudioMessage" android:background="@drawable/ysf_message_button_bottom_audio_selector" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="center" android:contentDescription="@null"/>
            <ImageView android:id="@+id/buttonTextMessage" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ysf_message_button_bottom_text_selector" android:scaleType="center" android:contentDescription="@null"/>
        </FrameLayout>
        <TextView android:textSize="@dimen/ysf_text_size_14" android:textColor="@color/ysf_black_333333" android:gravity="center" android:id="@+id/audioRecord" android:background="@drawable/ysf_message_input_record_selector" android:visibility="gone" android:layout_width="0dp" android:layout_height="@dimen/ysf_message_input_height" android:layout_marginLeft="@dimen/ysf_bottom_component_margin_horizontal" android:layout_marginRight="@dimen/ysf_bottom_component_margin_horizontal" android:text="@string/ysf_audio_record_touch_to_record" android:layout_weight="1"/>
        <EditText android:textSize="@dimen/ysf_text_size_16" android:id="@+id/editTextMessage" android:background="@drawable/ysf_message_input_edit_text" android:paddingLeft="@dimen/ysf_bottom_component_margin_horizontal" android:paddingTop="5dp" android:paddingRight="@dimen/ysf_bottom_component_margin_horizontal" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ysf_bottom_component_margin_horizontal" android:layout_marginRight="@dimen/ysf_bottom_component_margin_horizontal" android:maxHeight="72dp" android:minHeight="30dp" android:maxLines="4" android:maxLength="4000" android:layout_weight="1" android:imeOptions="flagNoExtractUi"/>
        <ImageView android:id="@+id/emoji_button" android:background="@drawable/ysf_message_button_bottom_emoji_selector" android:layout_width="@dimen/ysf_message_input_height" android:layout_height="@dimen/ysf_message_input_height" android:layout_marginRight="@dimen/ysf_bottom_component_margin_horizontal" android:scaleType="center" android:contentDescription="@null"/>
        <ImageView android:id="@+id/action_list_trigger_button" android:background="@drawable/ysf_message_button_bottom_add_selector" android:visibility="gone" android:layout_width="@dimen/ysf_message_input_height" android:layout_height="@dimen/ysf_message_input_height" android:layout_marginRight="@dimen/ysf_bottom_component_margin_horizontal" android:scaleType="centerInside" android:contentDescription="@null"/>
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.qiyukf.unicorn.widget.StylableTextView android:textSize="@dimen/ysf_text_size_14" android:gravity="center" android:id="@+id/send_message_button" android:layout_width="wrap_content" android:layout_height="@dimen/ysf_message_input_height" android:layout_marginRight="@dimen/ysf_bottom_component_margin_horizontal" android:text="@string/ysf_send"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>

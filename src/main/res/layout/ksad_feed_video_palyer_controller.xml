<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/ksad_video_thumb_image" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
    <TextView android:textSize="14dp" android:textColor="#dadada" android:id="@+id/ksad_video_network_unavailable" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="视频加载失败" android:layout_centerInParent="true"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ksad_data_flow_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textColor="@android:color/white" android:id="@+id/ksad_data_flow_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="播放将消耗流量"/>
        <TextView android:textSize="12dp" android:textColor="#dadada" android:gravity="center" android:id="@+id/ksad_data_flow_play" android:background="@drawable/ksad_video_play_continue_bg" android:layout_width="72dp" android:layout_height="26dp" android:layout_marginTop="21dp" android:text="继续播放"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ksad_video_complete_app_container" android:background="#cc000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/ksad_app_icon" android:layout_width="52dp" android:layout_height="52dp" android:src="@drawable/ksad_default_app_icon"/>
        <TextView android:textSize="16dp" android:textColor="@android:color/white" android:id="@+id/ksad_app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
        <TextView android:textSize="11dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/ksad_app_download" android:background="@drawable/ksad_video_install_bg" android:layout_width="64dp" android:layout_height="24dp" android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ksad_video_complete_h5_container" android:background="#cc000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="11dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/ksad_h5_open" android:background="@drawable/ksad_video_install_bg" android:layout_width="64dp" android:layout_height="24dp" android:layout_marginTop="14dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ksad_video_error_container" android:background="@android:color/black" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="14dp" android:textColor="#dadada" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="视频加载失败"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/ksad_video_progress" android:layout_width="match_parent" android:layout_height="2dp" android:progressDrawable="@drawable/ksad_video_progress" android:layout_alignParentBottom="true" style="@style/Widget.ProgressBar.Horizontal"/>
</RelativeLayout>

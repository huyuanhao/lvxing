                </RelativeLayout>
                <LinearLayout android:gravity="center_vertical" android:tag="binding_2" android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginTop="37dp" android:layout_marginStart="25dp" android:layout_marginEnd="25dp">
                    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="26sp" android:tag="binding_3" style="@style/tv_16_c33"/>
                        <TextView android:text="直邀好友" style="@style/tv_12_c99"/>
                    </LinearLayout>
                    <View android:layout_marginTop="27dp" android:layout_marginBottom="22dp" style="@style/DividerGrey.V"/>
                    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="26sp" android:tag="binding_4" style="@style/tv_16_c33"/>
                        <TextView android:text="扩散好友" style="@style/tv_12_c99"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout android:id="@+id/lyt_web" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
    <ezy.ui.widget.round.RoundText android:id="@+id/btn_invite" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="邀请好友" android:layout_marginStart="25dp" android:layout_marginEnd="25dp" style="@style/RndBtn.Green"/>
</LinearLayout>

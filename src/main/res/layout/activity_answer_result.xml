<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:tag="layout/activity_answer_result_0" android:layout_width="match_parent" android:layout_height="match_parent">
    <ezy.ui.widget.CenteredTitleBar app:title="答题结果" style="@style/Toolbar.BgTrans.Black"/>
    <androidx.core.widget.NestedScrollView android:tag="binding_1" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="80dp" android:layout_height="wrap_content" android:layout_marginTop="23dp" android:src="@mipmap/ic_answer_fail" android:adjustViewBounds="true"/>
            <TextView android:textStyle="bold" android:layout_marginTop="18dp" android:text="很遗憾，考试失败" style="@style/tv_16_c33"/>
            <FrameLayout android:background="@drawable/bg_white_10" android:layout_width="match_parent" android:layout_height="75dp" android:layout_marginTop="27dp" android:paddingStart="20dp" android:paddingEnd="16dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
                <TextView android:textStyle="bold" android:tag="binding_2" android:layout_marginTop="17dp" style="@style/tv_16_c33"/>
                <TextView android:layout_gravity="bottom" android:layout_marginBottom="17dp" android:text="补考错题，仍有机会拿金币哦~" style="@style/tv_12_c33"/>
                <ezy.ui.widget.round.RoundText android:textSize="14sp" android:textStyle="normal" android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/btn_answer_again" android:layout_width="80dp" android:layout_height="30dp" android:layout_margin="0dp" android:text="补考错题" style="@style/RndBtn.Green"/>
            </FrameLayout>
            <LinearLayout android:orientation="vertical" android:background="@drawable/bg_white_10" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="20dp" android:paddingStart="20dp" android:paddingEnd="20dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
                <TextView android:textStyle="bold" android:layout_marginTop="22dp" android:text="错题列表" style="@style/tv_16_c33"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="20dp" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:tag="binding_3" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:src="@mipmap/ic_coin_box" android:adjustViewBounds="true"/>
        <TextView android:textStyle="bold" android:layout_marginTop="10dp" android:text="恭喜你答题全对！" style="@style/tv_16_c33"/>
        <TextView android:tag="binding_4" android:layout_marginTop="19dp" style="@style/tv_12_c33"/>
        <TextView android:textSize="40sp" android:tag="binding_5" android:layout_marginTop="3dp" style="@style/tv_16_c33"/>
        <Space android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"/>
        <ezy.ui.widget.round.RoundText android:id="@+id/btn_receive" android:layout_marginBottom="20dp" android:text="开心收下" android:layout_marginStart="25dp" android:layout_marginEnd="25dp" style="@style/RndBtn.Green"/>
    </LinearLayout>
</LinearLayout>

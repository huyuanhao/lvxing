        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/win_sdk_offer_dialog_icon1" android:layout_width="124dp" android:layout_height="98dp" android:src="@drawable/win_sdk_offer_dialog_icon1" android:scaleType="fitXY"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/win_sdk_offer_dialog_offer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/win_sdk_offer_dialog_bg" android:adjustViewBounds="true"/>

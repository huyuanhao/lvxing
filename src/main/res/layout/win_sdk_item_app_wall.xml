<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/win_item_layout" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="93dp">
    <ImageView android:id="@+id/win_item_icon" android:layout_width="38dp" android:layout_height="38dp" android:layout_marginLeft="12dp" android:layout_centerVertical="true"/>
    <TextView android:textSize="16sp" android:textColor="#000000" android:id="@+id/win_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginBottom="4dp" android:maxLines="1" android:layout_toRightOf="@+id/win_item_icon" android:layout_above="@+id/win_item_desc"/>
    <FrameLayout android:id="@+id/win_item_button_wrapper" android:layout_width="88dp" android:layout_height="28dp" android:layout_marginRight="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <com.pw.view.DownloadProgressBar android:layout_gravity="center" android:id="@+id/win_sdk_progress_download_button" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/Widget.ProgressBar.Horizontal"/>
        <TextView android:textSize="14sp" android:textColor="#fffee88e" android:gravity="center" android:layout_gravity="center" android:id="@+id/win_item_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
    </FrameLayout>
    <TextView android:textSize="12sp" android:textColor="#8e8e93" android:ellipsize="end" android:id="@+id/win_item_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="13dp" android:maxLines="1" android:layout_toLeftOf="@+id/win_item_button_wrapper" android:layout_toRightOf="@+id/win_item_icon" android:layout_centerVertical="true"/>
    <TextView android:textSize="10sp" android:textColor="#ffffff" android:gravity="center_vertical" android:id="@+id/win_item_reward_info" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="6dp" android:layout_toRightOf="@+id/win_item_icon" android:layout_below="@+id/win_item_desc"/>
    <View android:background="#f7f3f6" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_alignParentTop="true"/>
</RelativeLayout>
